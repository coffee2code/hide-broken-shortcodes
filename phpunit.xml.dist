<phpunit
	bootstrap="phpunit/bootstrap.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<testsuites>
		<testsuite name="hide-broken-shortcodes">
			<directory prefix="test-" suffix=".php">./phpunit/tests/</directory>
		</testsuite>
	</testsuites>
</phpunit>
